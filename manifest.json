{
  "manifest_version": 3,
  "name": "Zenfluence",
  "version": "1.0",
  "description": "Hide Confluence UI elements for distraction-free writing",
  "content_scripts": [
    {
      "matches": ["*://*.atlassian.net/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"]
}
